datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model AppRelease {
  id           String   @id @default(cuid())
  appName      String
  appVersion   String
  appBuild     String
  gitCommit    String
  mainFileName String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  title        String?
  published    Boolean  @default(true)
  description  String?

  @@unique([appName, appVersion, appBuild])
  // table name
  @@map("app_releases")
}
